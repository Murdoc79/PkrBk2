<% if @season.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@season.errors.count, "error") %> prohibited this season from being saved:</h2>

    <ul>
    <% @season.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @season do |f| %>
  <table>
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :number_of_games %></td>
      <td><%= f.text_field :number_of_games %></td>
    </tr>
    <tr>
      <td><%= f.label :number_of_tables %></td>
      <td><%= f.text_field :number_of_tables %></td>
    </tr>
    <tr>
      <td><%= f.label :notes %></td>
      <td><%= f.text_area :notes, :size => "60x12" %></td>
    </tr>
    <tr>
      <td><%= f.label :visible_to_public %></td>
      <td><%= f.check_box :visible %></td>
    </tr>
  </table>  
  <%= f.submit "Update" %>
<% end %>
